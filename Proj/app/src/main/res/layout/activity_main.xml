<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF7744"
    tools:context="com.example.sam.proj.MainActivity">

    <ImageButton
        android:id="@+id/imageRegion1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/region1"
        android:background="#00000000" />

    <TextView
        android:id="@+id/etRegionname1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:text="@string/regionname1"
        android:textSize="30sp"
        android:paddingLeft="28dp"
        android:paddingRight="10dp"
        android:layout_below="@id/imageRegion1" />

    <ImageButton
        android:id="@+id/imageRegion2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/region2"
        android:background="#00000000" />

    <TextView
        android:id="@+id/etRegionname2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:text="@string/regionname2"
        android:textSize="30sp"
        android:paddingLeft="28dp"
        android:paddingRight="10dp"
        android:layout_below="@id/imageRegion2"/>

    <ImageButton
        android:id="@+id/imageRegion3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etRegionname1"
        android:src="@drawable/region3"
        android:background="#00000000" />

    <TextView
        android:id="@+id/etRegionname3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageRegion3"
        android:text="@string/regionname3"
        android:textSize="30sp"
        android:paddingLeft="32dp"
        android:paddingRight="10dp"/>

    <ImageButton
        android:id="@+id/imageRegion4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etRegionname2"
        android:src="@drawable/region4"
        android:background="#00000000" />

    <TextView
        android:id="@+id/etRegionname4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageRegion4"
        android:text="@string/regionname4"
        android:textSize="30sp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>
</RelativeLayout>
